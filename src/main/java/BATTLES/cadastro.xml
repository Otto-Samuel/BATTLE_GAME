<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="battles.controllers.CadastroController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Cadastro" style="-fx-font-size: 18px;"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200"/>
        </columnConstraints>
        
        <Label text="Novo UsuÃ¡rio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNovoUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Senha:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtNovaSenha" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Confirmar Senha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtConfirmarSenha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    
    <Label fx:id="lblMensagem" style="-fx-text-fill: red;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnCadastrar" text="Cadastrar" defaultButton="true"/>
        <Button fx:id="btnVoltar" text="Voltar"/>
    </HBox>
</VBox>